<Window x:Class="Laboration_2_Music.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laboration_2_Music"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <GroupBox Header="PlayLists" Grid.Row="0" Margin="0 10">
            <DataGrid ItemsSource="{Binding PlayLists}"
                      AutoGenerateColumns="true" 
                      CanUserAddRows="False"
                      Margin=" 0 10" SelectedItem="{Binding SelectedPlaylist, Mode=TwoWay}">
                <DataGrid.Columns></DataGrid.Columns>
            </DataGrid>
        </GroupBox>
        <GroupBox Header="Tracks" Grid.Column="1">
            <DataGrid ItemsSource="{Binding AllTracks}"
                      AutoGenerateColumns="true"/>

        </GroupBox>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
        <DataGrid Grid.Column="0" 
                  ItemsSource="{Binding DisplayTracks}"
                  SelectedItem="{Binding SelectedTrack}"
                  AutoGenerateColumns="true">
        </DataGrid>
            <StackPanel Grid.Column="1">
                <Button Content="save to db"
                        Command="{Binding InsertTrackCommand}"/>
                <Button Content="Remove track"
                        Command="{Binding RemoveTrackCommand}"/>
                
            </StackPanel>
        </Grid>


    </Grid>
</Window>
